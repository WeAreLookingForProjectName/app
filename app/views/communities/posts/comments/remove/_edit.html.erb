<%= render 'shared/modal', title: t('.title') do %>
  <%= simple_form_for(@form, url: community_post_comment_remove_path(comment.community, comment.post, comment), method: :put, remote: true) do |f| %>
    <% if Communities::Posts::Comments::RemovePolicy.new(pundit_user, comment).update_reason? %>
      <%= f.input :reason, as: :text %>
    <% else %>
      <%= t('communities.posts.comments.remove.edit.confirmation') %>
    <% end %>

    <%= f.button :submit, t('communities.posts.comments.remove.edit.submit') %>
  <% end %>
<% end %>