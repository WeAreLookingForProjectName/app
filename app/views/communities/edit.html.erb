<% content_for(:meta_title, "#{community.title}: #{t("settings")}") %>

<%= render 'shared/sidebar', community: community %>

<div class="row mt-2 mb-3">
  <div class="col-12 h5 mb-0">
    <%= link_to(t('settings'), edit_community_path(community)) %>
  </div>

  <div class="col-12">
    <div class="col-12 bg-white border rounded mt-2">
      <div class="row">
        <div class="col-12 pt-3 pb-3">
          <%= simple_form_for(@form, url: community_path(community), remote: true) do |f| %>
            <%= f.input :title %>
            <%= f.input :description, as: :text %>
            <%= f.button :submit, t('update') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
