<% content_for(:meta_title, @community.title) %>

<%= render 'shared/sidebar', community: @community %>

<% content_for(:navigation) do %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= t(sorting) %>
    </a>

    <div class="dropdown-menu">
      <% sorting_options.each do |sorting| %>
        <%= link_to(t(sorting), community_path(@community, sort: sorting), class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>

  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= ThingsDates.new(params[:date]).i18n %>
    </a>

    <div class="dropdown-menu">
      <% ThingsDates.new.list.each do |k, v| %>
        <%= link_to(v, community_path(@community, sort: params[:sort], date: k), class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>
<% end %>

<%= render @records %>
<%= render 'shared/pagination', pagination: @pagination %>