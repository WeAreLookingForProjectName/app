<%= render 'shared/modal', title: t('.title') do %>
  <%= simple_form_for(@form, url: community_bans_path(community), method: :post, remote: true) do |f| %>
    <%= f.input :username %>
    <%= f.input :reason, as: :text %>
    <%= f.input :days, as: :integer %>
    <%= f.input :permanent, as: :boolean %>

    <%= f.button :submit, t("bans.new.submit") %>
  <% end %>
<% end %>