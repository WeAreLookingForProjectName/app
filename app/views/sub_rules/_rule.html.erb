<div class="entry row">
  <div class="title col-12">
    <%= rule.title %>

    <div class="actions">
      <%= link_to(fa_icon('pencil'), sub_rule_edit_path(@sub, rule), remote: true, class: 'update') %>
      <%= link_to(fa_icon('trash'), sub_rule_delete_confirm_path(@sub, rule), remote: true, class: 'delete') %>

      <% if rule.description.present? %>
        <span class="toggleDetails"><%= fa_icon('ellipsis-h') %></span>
      <% end %>
    </div>
  </div>

  <% if rule.description.present? %>
    <div class="details col-12 d-none">
      <%= rule.description %>
    </div>
  <% end %>
</div>
