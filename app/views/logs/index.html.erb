<% content_for(:meta_title, t("logs")) %>

<% if @sub.present? %>
  <%= render 'subs/second_top_menu' %>
  <%= render 'subs/sidebar' %>
<% end %>

<div id="logs" class="entries row">
  <div class="head col-12">
    <div class="title">
      <%= link_to(t('logs'), logs_path(sub: @sub)) %>
    </div>
  </div>

  <div class="col-12">
    <div class="body col-12">
      <%= render partial: "log", collection: @records, cached: true %>
    </div>
  </div>
</div>

<%= render 'shared/pagination', pagination_record: @pagination_record %>