<%= render 'shared/modal', title: t('edit') do %>
  <%= form_with(model: @form, url: global_ban_update_path(@ban), class: 'updateForm') do |f| %>
    <div class="modal-body">
      <%= f.text_area :reason %>
      <%= f.text_field :days %>
      <%= f.check_box :permanent %>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t('cancel') %></button>
      <%= f.submit t('update') %>
    </div>
  <% end %>
<% end %>