<% content_for(:meta_title, "#{user.username}: #{t("settings")}") %>

<%= render "users/sidebar", user: user %>

<div class="row mb-3">
  <div class="col-12">
    <div class="col-12 bg-white border rounded">
      <div class="row">
        <div class="col-12 pt-3 pb-3">
          <%= simple_form_for(@form, url: users_path, remote: true) do |f| %>
            <%= f.input :email, as: :email %>
            <%= f.input :password, as: :password %>
            <%= f.input :password_current, as: :password %>
            <%= f.button :submit, t('update') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
