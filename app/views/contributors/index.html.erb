<% content_for(:meta_title, t("contributors")) %>

<% if @sub.present? %>
  <%= render 'subs/second_top_menu' %>
  <%= render 'subs/sidebar' %>
<% end %>

<div id="contributors" class="entries row">
  <div class="head col-12">
    <div class="title">
      <%= link_to(t('contributors'), contributors_path(sub: @sub)) %>
    </div>

    <div class="actions">
      <%= link_to(t('create'), new_contributor_path(sub: @sub), remote: true, class: 'create') %>
    </div>
  </div>

  <div class="search col-12">
    <%= form_with(url: search_contributors_path(sub: @sub), local: true, class: "form-inline") do |f| %>
      <%= f.text_field :query, value: params[:query], placeholder: t("username") %>
      <%= f.submit t("search") %>
      <%= link_to(t("reset"), contributors_path(sub: @sub), class: "btn btn-primary") %>
    <% end %>
  </div>

  <div class="col-12">
    <div class="body col-12">
      <%= render partial: "contributor", collection: @records %>
    </div>
  </div>
</div>

<%= render 'shared/pagination', after: @after_record %>