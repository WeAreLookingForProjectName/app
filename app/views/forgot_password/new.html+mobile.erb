<% content_for(:meta_title, t("forgot_password")) %>

<div class="col-12">
  <%= form_with(model: @form, url: forgot_password_path, class: 'forgotPasswordForm') do |f| %>
    <%= f.text_field :email %>

    <div class="form-group">
      <%= recaptcha_tags %>
    </div>

    <%= f.submit t('forgot_password'), class: 'mr-auto' %>

    <% if user_not_signed_in? %>
      <div class="row">
        <div class="col-12 mt-3">
          <%= link_to(t('sign_in'), new_sign_in_path) %>
          <%= link_to(t('sign_up'), new_sign_up_path) %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>