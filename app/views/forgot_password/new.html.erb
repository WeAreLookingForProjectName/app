<% content_for(:meta_title, t("forgot_password")) %>

<%= render 'shared/sidebar', community: community %>

<div class="col-12 bg-white border rounded p-3">
  <div class="row">
    <div class="col-6">
      <%= form_with(model: @form, url: forgot_password_path, class: 'forgotPasswordForm') do |f| %>
        <%= f.text_field :email %>

        <div class="form-group">
          <%= recaptcha_tags %>
        </div>

        <%= f.submit t('forgot_password'), class: 'mr-auto' %>

        <% if user_signed_out? %>
          <span class="float-right pt-2">
            <%= link_to(t('sign_in'), new_sign_in_path) %>
            <%= link_to(t('sign_up'), new_sign_up_path) %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>