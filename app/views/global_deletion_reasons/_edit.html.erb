<%= render 'shared/modal', title: t('edit') do %>
  <%= form_with(model: @form, url: global_deletion_reason_update_path(@deletion_reason), class: 'updateForm') do |f| %>
    <div class="modal-body">
      <%= f.text_field :title %>
      <%= f.text_area :description %>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t('cancel') %></button>
      <%= f.submit t('update') %>
    </div>
  <% end %>
<% end %>
