<% content_for(:meta_title, t("tags")) %>

<% if @sub.present? %>
  <%= render 'subs/sidebar', sub: @sub %>
<% end %>

<div id="tags" class="entries row">
  <div class="head col-12">
    <div class="title">
      <%= link_to(t('tags'), tags_path(sub: @sub)) %>
    </div>

    <div class="actions">
      <% if policy(Tag).create? %>
        <%= link_to(t('create'), new_tag_path(sub: @sub), remote: true, class: 'create') %>
      <% end %>
    </div>
  </div>

  <div class="col-12">
    <div class="body col-12">
      <%= render partial: "tag", collection: @records %>
    </div>
  </div>
</div>

<%= render 'shared/pagination', pagination_record: @pagination_record %>