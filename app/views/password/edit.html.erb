<% content_for(:meta_title, t("change_password")) %>

<%= render 'shared/sidebar', community: community %>

<div class="col-12 bg-white border rounded p-3">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for(@form, url: password_path, remote: true) do |f| %>
        <%= f.input :email, as: :hidden %>
        <%= f.input :token, as: :hidden %>
        <%= f.input :password, as: :password %>
        <%= f.button :submit, t('update') %>
      <% end %>
    </div>
  </div>
</div>