<% content_for(:meta_title, t("sign_in")) %>

<div class="col-12">
  <%= form_with(model: @form, url: sign_in_path, class: 'signInForm') do |f| %>
    <%= f.text_field :username %>
    <%= f.password_field :password %>

    <div class="form-group">
      <%= recaptcha_tags %>
    </div>

    <%= f.submit t('sign_in'), class: 'mr-auto' %>

    <div class="row">
      <div class="col-12 mt-3">
        <%= link_to(t('sign_up'), new_sign_up_path) %>
        <%= link_to(t('forgot_password'), forgot_password_new_path) %>
      </div>
    </div>
  <% end %>
</div>