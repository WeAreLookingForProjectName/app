<%= render 'shared/modal', title: t('sign_in') do %>
  <%= form_with(model: @form, url: sign_in_path, class: 'signInForm') do |f| %>
    <div class="modal-body">
      <%= f.text_field :username %>
      <%= f.password_field :password %>

      <div class="form-group">
        <%= recaptcha_tags %>
      </div>

      <div class="row">
        <div class="col-12">
          <%= f.submit t('sign_in') %>
        </div>

        <div class="col-12 mt-3">
          <%= link_to(t('sign_up'), sign_up_new_path, remote: true, class: 'signUp') %>
          <br>
          <%= link_to(t('forgot_password'), forgot_password_new_path, remote: true, class: 'forgotPassword') %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>