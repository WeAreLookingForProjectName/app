<div class="entry row">
  <div class="title col-12">
    <%= link_to(ban.user.username, posts_user_path(ban.user)) %>

    <div class="actions">
      <% if policy(ban).update? %>
        <%= link_to(fa_icon("pencil"), edit_community_ban_path(ban.community, ban), remote: true, class: "update") %>
      <% end %>

      <% if policy(ban).destroy? %>
        <%= link_to(fa_icon("trash"), "#", class: "delete", data: { url: community_ban_path(ban.community, ban) }) %>
      <% end %>

      <span class="toggleDetails"><%= fa_icon("ellipsis-h") %></span>
    </div>
  </div>

  <div class="details col-12 d-none">
    <%= ban.details %>
  </div>
</div>