<% content_for(:meta_title, "#{community.title}: #{t("bans")}") %>

<%= render("shared/sidebar", community: community) %>

<div id="bans" class="entries row">
  <div class="head col-12">
    <div class="title">
      <%= link_to(t("bans"), community_bans_path(community)) %>
    </div>

    <div class="actions">
      <% if policy(Ban).create? %>
        <%= link_to(t("create"), new_community_ban_path(community), remote: true, class: 'create') %>
      <% end %>
    </div>
  </div>

  <div class="search col-12">
    <%= form_with(url: community_bans_path(community), local: true, method: :get, class: "form-inline") do |f| %>
      <%= f.text_field :query, value: params[:query], placeholder: t("username") %>
      <%= f.submit t("search") %>
      <%= link_to(t("reset"), community_bans_path(community), class: "btn btn-primary") %>
    <% end %>
  </div>

  <div class="col-12">
    <div class="body col-12">
      <%= render(bans) %>
    </div>
  </div>
</div>

<%= render("shared/pagination", pagination: @pagination) %>