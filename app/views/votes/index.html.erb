<% content_for(:meta_title, "#{@user.username}: #{t("votes")}") %>

<% content_for(:second_top_menu) do %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= t('votes') %>
    </a>

    <div class="dropdown-menu">
      <% user_profile_menu(@user).each do |title, path| %>
        <%= link_to(title, path, class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>

  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= vote_type_filter_options[params[:vote_type]] %>
    </a>

    <div class="dropdown-menu">
      <% vote_type_filter_options.each do |k, v| %>
        <%= link_to(v, votes_path(vote_type: k), class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>

  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= thing_type_filter_options[params[:thing_type]] %>
    </a>

    <div class="dropdown-menu">
      <% thing_type_filter_options.each do |k, v| %>
        <%= link_to(v, votes_path(vote_type: params[:vote_type], thing_type: k), class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>
<% end %>

<%= render "users/sidebar" %>
<%= render partial: "things/thing", collection: @records, cached: true %>
<%= render 'shared/pagination', after: @after_record %>