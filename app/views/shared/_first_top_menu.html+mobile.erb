<div class="container p-0">
  <div class="row">
    <div class="col-12">
      <nav class="first-top-menu navbar navbar-expand">
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= render "shared/navigation" %>
            </li>
          </ul>

          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="user-signed-in nav-item">
                <% if Current.user.notifications_count.zero? %>
                  <%= link_to(fa_icon('bell-o'), user_notifications_path(Current.user), class: 'nav-link') %>
                <% else %>
                  <%= link_to(fa_icon('bell', text: Current.user.notifications_count), user_notifications_path(Current.user), class: 'nav-link text-danger') %>
                <% end %>
              </li>
            <% else %>
              <li class="nav-item ml-2">
                <%= link_to(t('sign_in'), new_sign_in_path, remote: true, class: 'signIn') %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</div>
