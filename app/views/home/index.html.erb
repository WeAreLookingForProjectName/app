<% content_for(:meta_title, t("app_name")) %>

<%= render "shared/sidebar", community: @community %>

<% content_for(:navigation) do %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= t(sorting) %>
    </a>

    <div class="dropdown-menu">
      <% sorting_options.each do |sorting| %>
        <%= link_to(t(sorting), root_path(sort: sorting), class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>

  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= t(date || "all_time") %>
    </a>

    <div class="dropdown-menu">
      <%= link_to(t("all_time"), root_path(sort: params[:sort], date: :all), class: 'dropdown-item') %>

      <% date_options.each do |date| %>
        <%= link_to(t(date), root_path(sort: params[:sort], date: date), class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>
<% end %>

<%= render @records %>
<%= render "shared/pagination", pagination: @pagination %>