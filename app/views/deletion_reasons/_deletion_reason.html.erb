<div class="entry row">
  <div class="title col-12">
    <%= deletion_reason.title %>

    <div class="actions">
      <% if policy(deletion_reason).update? %>
        <%= link_to(fa_icon('pencil'), edit_sub_deletion_reason_path(deletion_reason.sub, deletion_reason), remote: true, class: 'update') %>
      <% end %>

      <% if policy(deletion_reason).destroy? %>
        <%= link_to(fa_icon('trash'), "#", class: 'delete', data: { url: sub_deletion_reason_path(deletion_reason.sub, deletion_reason) }) %>
      <% end %>

      <% if deletion_reason.description.present? %>
        <span class="toggleDetails"><%= fa_icon('ellipsis-h') %></span>
      <% end %>
    </div>
  </div>

  <% if deletion_reason.description.present? %>
    <div class="details col-12 d-none">
      <%= deletion_reason.description %>
    </div>
  <% end %>
</div>
