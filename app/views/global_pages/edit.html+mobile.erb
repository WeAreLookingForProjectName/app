<% content_for(:meta_title, @page.title) %>

<div id="pages" class="row mt-3 mb-3">
  <div class="col-12 h5 mb-3">
    <%= link_to(t('pages'), global_pages_path) %>
  </div>

  <div class="col-12">
    <%= form_with(model: @form, url: global_page_update_path(@page), class: 'updateForm') do |f| %>
      <%= f.text_field :title %>
      <%= f.text_area :text %>

      <%= f.submit t('update') %>
    <% end %>
  </div>
</div>