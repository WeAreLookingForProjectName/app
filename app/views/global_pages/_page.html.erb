<div class="entry row">
  <div class="title col-12">
    <%= link_to(page.title, global_page_path(page)) %>

    <div class="actions">
      <% if GlobalPagesPolicy.authorize(:update) %>
        <%= link_to(fa_icon('pencil'), global_page_edit_path(page), class: 'update') %>
      <% end %>

      <% if GlobalPagesPolicy.authorize(:destroy) %>
        <%= link_to(fa_icon('trash'), global_page_delete_confirm_path(page), remote: true, class: 'delete') %>
      <% end %>
    </div>
  </div>
</div>
