<% content_for(:meta_title, @thing.title) %>

<%= render 'subs/sidebar' %>

<div class="col-12 bg-white border rounded mb-3 pt-2 pb-3">
  <%= form_with(model: @form, url: sub_text_path(@sub, @thing), method: :put, class: 'updatePostForm') do |f| %>
    <%= f.text_area :title, value: @thing.title, rows: 3, disabled: true %>
    <%= f.text_area :text %>
    <%= f.submit t('update') %>

    <span class="formatting float-right mt-2" data-toggle="collapse" data-target="#formatting" aria-expanded="false">
      <%= t('formatting') %>
    </span>

    <div class="collapse mt-2" id="formatting">
      <%= t('formatting_body_html') %>
    </div>
  <% end %>
</div>