<div class="entry row">
  <div class="title col-12">
    <%= link_to(moderator.username, posts_user_path(moderator.user)) %>

    <div class="actions">
      <% if policy(moderator).destroy? %>
        <%= link_to(fa_icon('trash'), "#", class: 'delete', data: { url: community_moderator_path(moderator.community, moderator) }) %>
      <% end %>
    </div>
  </div>
</div>