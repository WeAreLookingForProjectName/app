<% content_for(:meta_title, @comment.title) %>

<%= render 'shared/sidebar', community: @comment.community %>

<div class="col-12 bg-white border rounded pb-3 mb-3">
  <div class="thing row mt-2">
    <% if @comment.removed? %>
      <div class="content col-12 mt-2">
        <%= t("removed_html", username: link_to(@comment.removed_by.username, posts_user_path(@comment.removed_by)), removed_at: datetime_ago_tag(@comment.removed_at), reason: @comment.removed_reason) %>
      </div>
    <% else %>
      <div class="info col-12">
        <%= link_to(@comment.user.username, posts_user_path(@comment.user)) %>
        <%= datetime_ago_tag(@comment.created_at) %>

        <% if @comment.edited? %>
          <%= t('edited_html', edited_at: datetime_ago_tag(@comment.edited_at)) %>
        <% end %>

        <% if @comment.explicit? %>
          <span class="explicit"><%= t('explicit') %></span>
        <% end %>

        <% if @comment.spoiler? %>
          <span class="spoiler"><%= t('spoiler') %></span>
        <% end %>
      </div>

      <div class="title col-12 mt-1">
        <%= link_to(@comment.title, thing_path(@comment)) %>
      </div>

      <div class="content col-12 mt-2 mb-2">
        <%= @comment.text_html.html_safe %>
      </div>

      <div class="actions col-12">
        <span class="vote">
          <%= link_to(fa_icon("arrow-up"), comment_votes_path(@comment), data: { params: "create_vote[type]=up" }, remote: true, method: :post, class: "mr-1") %>
          <%= @comment.score %>
          <%= link_to(fa_icon("arrow-down"), comment_votes_path(@comment), data: { params: "create_vote[type]=down" }, remote: true, method: :post, class: "ml-1") %>
        </span>

        <%= link_to(@comment.comments_count, thing_path(@comment, anchor: 'comments'), class: "comments_count") %>
      </div>
    <% end %>
  </div>

  <% unless @comment.file_attacher.cached? %>
    <% if @comment.blank? %>
      <% if user_signed_in? %>
        <% if CommentPolicy.new(pundit_user, @comment).create? %>
          <div class="row mt-3">
            <div class="col-12">
              <%= form_with(model: CreateComment.new, url: thing_comment_path(@comment), class: 'createCommentForm') do |f| %>
                <%= f.text_area :text, label: false %>
                <%= f.submit t('reply'), class: 'btn-sm' %>

                <span class="formatting float-right mt-2" data-toggle="collapse" data-target="#formatting" aria-expanded="false">
                  <%= t('formatting') %>
                </span>

                <div class="collapse mt-2" id="formatting">
                  <%= t('formatting_body_html') %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="row mt-3">
          <div class="col-12">
            <div class="row">
              <div class="col-6 mt-2">
                <%= t('login_or_sign_up') %>
              </div>

              <div class="col-6 text-right">
                <%= link_to(t('sign_in'), new_sign_in_path, remote: true, class: 'signIn btn btn-primary') %>
                <%= link_to(t('sign_up'), new_sign_up_path, remote: true, class: 'signUp btn btn-primary') %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <% if @topic.branch[:nested].present? %>
      <div class="row mt-3">
        <div class="col-12">
          <span id="sort" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= @sort_options.fetch(@sort, @sort_options['best']) %>
          </span>

          <div class="dropdown-menu">
            <% @sort_options.each do |k, v| %>
              <%= link_to(v, thing_path(@thing, sort: k, anchor: 'sort'), class: 'dropdown-item') %>
            <% end %>
          </div>

          <% if @comment.present? %>
            <span class="float-right"><%= t('comment_page_html', url: thing_path(@comment, sort: @sort)) %></span>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= render partial: "things/nested", locals: { item: @topic.branch } %>
  <% end %>
</div>