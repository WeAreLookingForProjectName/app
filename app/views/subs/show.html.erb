<% content_for(:meta_title, "#{@sub.title}: #{t(params[:sort])}") %>

<% content_for(:second_top_menu) do %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= ThingsSorting.new(params[:sort]).i18n %>
    </a>

    <div class="dropdown-menu">
      <% ThingsSorting.new.list.each do |k, v| %>
        <%= link_to(v, sub_path(@sub, sort: k), class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>

  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= ThingsDates.new(params[:date]).i18n %>
    </a>

    <div class="dropdown-menu">
      <% ThingsDates.new.list.each do |k, v| %>
        <%= link_to(v, sub_path(@sub, sort: params[:sort], date: k), class: 'dropdown-item') %>
      <% end %>
    </div>
  </li>

  <% if policy(Page).index? %>
    <% if @sub.pages.count.positive? %>
      <li class="nav-item">
        <%= link_to(t("pages"), pages_path(sub: @sub), class: "nav-link") %>
      </li>
    <% end %>
  <% end %>
<% end %>

<%= render "subs/sidebar", sub: @sub %>
<%= render @records %>
<%= render 'shared/pagination', pagination_record: @pagination_record %>