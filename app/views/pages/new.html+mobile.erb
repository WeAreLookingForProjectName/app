<% content_for(:meta_title, t("pages")) %>

<div id="pages" class="row mt-3 mb-3">
  <div class="col-12 h5 mb-3">
    <%= link_to(t('pages'), pages_path) %>
  </div>

  <div class="col-12">
    <%= form_with(model: @form, url: pages_path) do |f| %>
      <%= f.text_field :title %>
      <%= f.text_area :text %>

      <%= f.submit t('create') %>
    <% end %>
  </div>
</div>