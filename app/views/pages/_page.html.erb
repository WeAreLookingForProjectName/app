<div class="entry row">
  <div class="title col-12">
    <%= link_to(page.title, sub_page_path(page.sub, page)) %>

    <div class="actions">
      <% if policy(page).update? %>
        <%= link_to(fa_icon('pencil'), edit_sub_page_path(page.sub, page), class: 'update') %>
      <% end %>

      <% if policy(page).destroy? %>
        <%= link_to(fa_icon('trash'), "#", class: 'delete', data: { url: sub_page_path(page.sub, page) }) %>
      <% end %>
    </div>
  </div>
</div>
