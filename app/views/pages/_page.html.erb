<div class="entry row">
  <div class="title col-12">
    <%= link_to(page.title, page_path(page)) %>

    <div class="actions">
      <% if PagePolicy.new(pundit_user, @sub).update? %>
        <%= link_to(fa_icon('pencil'), edit_page_path(page), class: 'update') %>
      <% end %>

      <% if PagePolicy.new(pundit_user, @sub).destroy? %>
        <%= link_to(fa_icon('trash'), "#", class: 'delete', data: { url: page_path(page) }) %>
      <% end %>
    </div>
  </div>
</div>
