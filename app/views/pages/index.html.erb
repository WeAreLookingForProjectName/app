<% content_for(:meta_title, t("pages")) %>

<% if @sub.present? %>
  <%= render 'subs/second_top_menu' %>
  <%= render 'subs/sidebar' %>
<% end %>

<div id="pages" class="entries row">
  <div class="head col-12">
    <div class="title">
      <%= link_to(t('pages'), pages_path(sub: @sub)) %>
    </div>

    <% if PagePolicy.new(pundit_user, @sub).create? %>
      <div class="actions">
        <%= link_to(t('create'), new_page_path(sub: @sub), class: 'create') %>
      </div>
    <% end %>
  </div>

  <div class="col-12">
    <div class="body col-12">
      <%= render partial: "page", collection: @records %>
    </div>
  </div>
</div>

<%= render 'shared/pagination', pagination_record: @pagination_record %>