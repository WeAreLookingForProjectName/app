<% content_for(:meta_title, @facade.show_meta_title) %>

<% if @facade.sub_context? %>
  <%= render 'subs/sidebar', sub: @sub %>
<% else %>
  <%= render 'shared/sidebar' %>
<% end %>

<div class="page col-12 bg-white border rounded mb-3">
  <div class="row mt-2">
    <div class="col-12 h5">
      <%= link_to(@page.title, sub_page_path(@page.sub, @page)) %>
    </div>

    <div class="content col-12">
      <%= @page.text_html.html_safe %>
    </div>
  </div>
</div>
