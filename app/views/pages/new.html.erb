<% content_for(:meta_title, t("pages")) %>

<% if @sub.present? %>
  <%= render 'subs/sidebar', sub: @sub %>
<% end %>

<div class="col-12 bg-white border rounded mb-3">
  <div id="pages" class="row mt-2 mb-3">
    <div class="col-12 h5">
      <%= link_to(t('pages'), pages_path(sub: @sub)) %>
    </div>

    <div class="col-12">
      <%= form_with(model: @form, url: pages_path(sub: @sub)) do |f| %>
        <%= f.text_field :title %>
        <%= f.text_area :text %>

        <%= f.submit t('create') %>
      <% end %>
    </div>
  </div>
</div>
