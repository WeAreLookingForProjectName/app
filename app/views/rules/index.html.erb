<% content_for(:meta_title, t("rules")) %>

<% if @sub.present? %>
  <%= render 'subs/second_top_menu' %>
  <%= render 'subs/sidebar' %>
<% end %>

<div id="rules" class="entries row">
  <div class="head col-12">
    <div class="title">
      <%= link_to(t('rules'), rules_path(sub: @sub)) %>
    </div>

    <div class="actions">
      <%= link_to(t('create'), new_rule_path(sub: @sub), remote: true, class: 'create') %>
    </div>
  </div>

  <div class="col-12">
    <div class="body col-12">
      <%= render partial: "rule", collection: @records, cached: true %>
    </div>
  </div>
</div>

<%= render 'shared/pagination', after: @after_record %>