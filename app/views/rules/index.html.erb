<% content_for(:meta_title, "#{@community.title}: #{t("rules")}") %>

<%= render 'shared/sidebar', community: @community %>

<div id="rules" class="entries row">
  <div class="head col-12">
    <div class="title">
      <%= link_to(t('rules'), community_rules_path(@community)) %>
    </div>

    <div class="actions">
      <% if policy(Rule).create? %>
        <%= link_to(t('create'), new_community_rule_path(@community), remote: true, class: 'create') %>
      <% end %>
    </div>
  </div>

  <div class="col-12">
    <div class="body col-12">
      <%= render partial: "rule", collection: @records %>
    </div>
  </div>
</div>

<%= render 'shared/pagination', pagination: @pagination %>