<%= render 'shared/modal', title: t('create') do %>
  <%= simple_form_for(@form, url: community_rules_path(community), remote: true) do |f| %>
    <div class="modal-body">
      <%= f.input :title %>
      <%= f.input :description, as: :text %>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t('cancel') %></button>
      <%= f.button :submit, t('create') %>
    </div>
  <% end %>
<% end %>
