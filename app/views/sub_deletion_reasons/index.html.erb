<% content_for(:meta_title, t("deletion_reasons")) %>

<%= render 'subs/second_top_menu' %>
<%= render 'subs/sidebar' %>

<div id="deletion_reasons" class="entries row">
  <div class="head col-12">
    <div class="title">
      <%= link_to(t('deletion_reasons'), sub_deletion_reasons_path(@sub)) %>
    </div>

    <div class="actions">
      <%= link_to(t('create'), sub_deletion_reason_new_path(@sub), remote: true, class: 'create') %>
    </div>
  </div>

  <div class="col-12">
    <div class="body col-12">
      <%= render partial: "deletion_reason", collection: @records, cached: true %>
    </div>
  </div>
</div>

<%= render 'shared/pagination', after: @after_record %>