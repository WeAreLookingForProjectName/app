<div class="entry row">
  <div class="title col-12">
    <%= link_to(moderator.user.username, moderator.user) %>

    <div class="actions">
      <% if SubModeratorPolicy.new(current_user, @sub).update? %>
        <%= link_to(fa_icon('pencil'), edit_sub_moderator_path(@sub, moderator), remote: true, class: 'update ml-2') %>
      <% end %>

      <% if SubModeratorPolicy.new(current_user, @sub).destroy? %>
        <%= link_to(fa_icon('trash'), confirm_sub_moderator_path(@sub, moderator), remote: true, class: 'delete ml-2') %>
      <% end %>

      <span class="toggleDetails"><%= fa_icon('ellipsis-h') %></span>
    </div>
  </div>

  <div class="details col-12 d-none">
    <%= t('invited_by') %> <%= link_to(moderator.invited_by.username, moderator.invited_by) %> <%= datetime_tag(moderator.created_at, :short) %>.
    <%= moderator.master? ? t('master_access') : t('default_access') %>
  </div>
</div>